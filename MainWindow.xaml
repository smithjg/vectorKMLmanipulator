<Window x:Class="DisplayBixlerPath.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DisplayBixlerPath"
        mc:Ignorable="d"
        Title="Bixler File Read" Height="450" Width="800">


        <DockPanel Margin="10">
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Margin="10" Name="btnOpenFile" Click="btnOpenFile_Click">Open file</Button>
            <Separator Width="20" Background="Transparent"/>
            <Button Margin="10" Name="btnExtractRoute" Click="btnExtractRoute_Click">Extract Route</Button>
            <Separator Width="20" Background="Transparent"/>
              <ComboBox Name="cmbSessions" SelectionChanged="cmbSessions_SelectionChanged" ItemsSource="{Binding _names}">
            
              </ComboBox>
            </WrapPanel>
            <TextBox Name="txtEditor" />
        </DockPanel>

   

</Window>
